{
    "name": "Python Development Environment",
    "build": {
        "context": "..",  
        "dockerfile": "/home/stefanliute/my-docker-project/.devcontainer/Dockerfile"

    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": ["--login"]
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "streetsidesoftware.code-spell-checker",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "stefanliute",
    "forwardPorts": [8080],
    "postCreateCommand": "source ~/.bashrc && python3 -m pip install --user -r python_requirements.txt"
}
